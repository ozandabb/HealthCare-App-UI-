<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Take_photoActivity">
    <RelativeLayout
        android:id="@+id/relLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/takephoto_toolbar"
            android:background="@color/colorPrimary"
            app:titleTextColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/relLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap the Camera Icon"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"

                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/setupImage"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/camera" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/defaultImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/defaultpic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Blood Group"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/editTextBlood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="O+ | A+ | A- | B+ | B-"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration of your Condition"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/editTextCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Days | Weeks | Months | Years"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your Gender"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/editTextGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="Male | Female"
                android:layout_marginRight="30dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:textColor="#ffffff"
                android:elevation="10dp"
                android:background="@color/colorPrimary"
                android:text="Submit Details"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"></Button>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>
    </RelativeLayout>


</RelativeLayout>